<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/backgroundColor">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@color/colorAccent">

            <!-- ImageView for displaying baby's picture -->
            <ImageView
                android:id="@+id/babyImageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_foreground"
                android:layout_marginEnd="16dp"
                android:layout_gravity="center_vertical"
                android:contentDescription="Baby Picture"
                android:background="@drawable/rounded_image_background" />

            <!-- Inner LinearLayout for baby details -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Baby Name -->
                <TextView
                    android:id="@+id/nameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name: "
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="6dp" />

                <!-- Date of Birth -->
                <TextView
                    android:id="@+id/dobTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DOB: "
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="4dp" />

                <!-- Age -->
                <TextView
                    android:id="@+id/ageTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Age: "
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="4dp" />

                <!-- Gender -->
                <TextView
                    android:id="@+id/genderTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gender: "
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="4dp" />

                <!-- Health Note -->
                <TextView
                    android:id="@+id/healthNoteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Health Note: "
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="4dp" />

                <!-- Emergency Contact -->
                <TextView
                    android:id="@+id/emergencyContactTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Emergency Contact: "
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="8dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
